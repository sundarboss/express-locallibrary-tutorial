extends layout

block content
  h1 #{title}: #{genre.name}
  
  if genre_books.length
    p #[strong Delete the books in this genre before trying to delete this Genre]
    
    div(style='margin-left:20px;margin-top:20px')
    
      h4 Books in this Genre
      
      dl
        each book in genre_books
          dt
            a(href=book.url) #{book.title}
          dd #{book.summary}
          
  else
    p Are you sure you really want to delete this genre?
    
    form(method='POST' action='')
      div.form-group
        input#genreid.form-control(type='hidden' name='genreid' required='true' value=genre._id)
        
      button.btn.btn-primary(type='submit') Delete Genre